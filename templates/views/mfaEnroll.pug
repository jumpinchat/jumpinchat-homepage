extends ../layouts/default

block content
  .site-wrapper
    include ../includes/header
    section.full-width
      if success
        div.settings__PageBanner.settings__PageBanner--success= success
      if error
        div.settings__PageBanner.settings__PageBanner--error= error
      .wrapper
        .register__FormWrapper
          header.register__Header
            h2 Enroll in MFA to secure your account


          h3 Step 1
          p
            | Download and install the
            |
            a(href="https://support.google.com/accounts/answer/1066447", target="_blank", rel="noopener noreferrer") Google Authenticator
            |,
            |
            a(href="https://1password.com/downloads/", target="_blank", rel="noopener noreferrer") 1Password
            |, or
            |
            a(href="https://authy.com/download/", target="_blank", rel="noopener noreferrer") Authy Authenticator
            |
            | app for your phone or tablet.

          h3 Step 2
          p.
            Scan the QR code using your chosen authenticator app

          div.mfa__CodeImage
            img(src=mfaQr)

          h3 Step 3
          p.
            Validate by entering a generated code

          form(method="post")
            input(type='hidden', name='action', value='verify')
            .form__InputContainer
              label.form__Label(for="token") Token
              input.form__Input.register__FormInput.form__Input--white#token(
                name="token",
                type="text",
                placeholder="111111",
                required="true",
                inputmode="numeric",
                autocomplete="one-time-code"
              )

            .form__InputContainer
              button.button.button--blue(type="submit") Submit
